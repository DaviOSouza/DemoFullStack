@model FullStack.WebDemo.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Preencha os campos da Categoria a ser criada</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campos de Input -->
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <!-- Botões Salvar e Voltar -->
            <div class="d-flex justify-content-between mt-3">
                <button type="submit" class="btn btn-success w-auto">Criar</button>
                <a asp-action="Index" class="btn btn-secondary w-auto">Voltar à Lista</a>
            </div>

        </form>
    </div>
</div>
